<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="8dp">

<!--        <TextView-->
<!--            android:id="@+id/tv_id_pesanan"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_marginBottom="4dp"-->
<!--            android:layout_marginStart="150dp"-->
<!--            android:layout_marginRight="10dp"-->
<!--            android:layout_toEndOf="@+id/layout_tujuan"-->
<!--            android:layout_toRightOf="@+id/layout_tujuan"-->
<!--            android:gravity="right"-->
<!--            android:textSize="40sp"-->
<!--            tools:text="@array/id_pesanan"-->
<!--            android:layout_marginLeft="150dp" />-->

        <LinearLayout
            android:id="@+id/layout_tujuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_id_pesanan"
                android:layout_width="wrap_content"
                android:text="Id Pesanan"
                android:visibility="gone"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_item_asal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Padang "
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_strip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_item_tujuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bukittinggi"
                android:textStyle="bold"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_jadwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_below="@id/layout_tujuan"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            tools:text="@array/jadwal_trip" />

        <TextView
            android:id="@+id/tv_item_jam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_below="@+id/tv_item_jadwal"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            tools:text="13.00" />

        <TextView
            android:id="@+id/tv_item_tanggal_pesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_below="@+id/tv_item_jam"
            android:layout_marginTop="6dp"
            android:gravity="right"
            android:textSize="14sp"
            android:textStyle="italic"
            tools:text="Ordered at : " />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
